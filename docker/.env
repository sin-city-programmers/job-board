# MySQL Database Configuration
# Copy this file to .env and update with your local values

# MySQL Root Password (required)
# Used for administrative access to the MySQL server
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# MySQL Database Name (required)
# The name of the database that will be created automatically
MYSQL_DATABASE=job_board

# MySQL User (required)
# Non-root user for application access
MYSQL_USER=job_board_user

# MySQL User Password (required)
# Password for the application user
MYSQL_PASSWORD=your_secure_password_here

# MySQL Port (optional, defaults to 3306-3310)
# The port on which MySQL will be exposed on the host machine
# Can be a single port (3306) or a range (3306-3310) for auto-increment if port is in use
MYSQL_PORT=3306-3310

# Connection String Example:
# mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@localhost:${MYSQL_PORT}/${MYSQL_DATABASE}
